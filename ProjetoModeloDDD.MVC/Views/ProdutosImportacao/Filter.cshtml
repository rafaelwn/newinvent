@model IEnumerable<ProjetoModeloDDD.MVC.ViewModels.Inventario.ProdutoImportacaoViewModel>
@Styles.Render("~/Content/webgrid_style.css")

<div style="width:120%" id="grid_ajax">
    @{
        //WebGrid grid = new WebGrid<Model>(null, rowsPerPage: 2, defaultSort: "Nome");
        //var grid = new WebGrid<Product>(null, rowsPerPage: Model.PageSize,  defaultSort: "Name");
        //var grid = new WebGrid<Model>(null, rowsPerPage: 2, defaultSort: "Nome");
        var grid = new WebGrid(Model, defaultSort: "NomeProduto", rowsPerPage: 10, ajaxUpdateContainerId: "grid_ajax");

        @grid.GetHtml(
            tableStyle: "webgrid",
            fillEmptyRows: false,
            headerStyle: "webgrid-header",
            alternatingRowStyle: "webgrid-alternating-row",
            rowStyle: "webgrid-row-style",
            footerStyle: "webgrid-footer",
            mode: WebGridPagerModes.All,
            firstText: "<< Primeiro",
            previousText: "< Anterior",
            nextText: "Próximo >",
            lastText: "Último >>",
            columns: new[] {
                grid.Column("NumeroLoja", header: "Numero Loja", style:" width: 150px; "),
                grid.Column("CodigoEan", header: "Codigo Ean", style:" width: 150px; "),
                grid.Column("NomeProduto", header: "Nome Produto"),
                grid.Column("PrecoUnitario", header: "Preço Unitário"),
                grid.Column("Quantidade", header: "Quantidade")               

                        }
                 )
    }
</div>